<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="groupassingment.airlinesreservations.controllers.PrintTicketController"
      spacing="10" alignment="CENTER" style="-fx-background-color: #f5f5f5;" padding="20">

    <Label text="âœˆ Flight Ticket" style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <VBox spacing="6" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #1e3a8a; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5,0,0,3);">
        <Text text="--- Customer Information ---" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <Label fx:id="lbl_customerName" text="Name:" />
        <Label fx:id="lbl_customerEmail" text="Email:" />
        <Label fx:id="lbl_customerPhone" text="Phone:" />
        <Label fx:id="lbl_customerId" text="ID Number:" />
        <Label fx:id="lbl_fareCategory" text="Fare Category:" />

        <Text text="--- Flight Details ---" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <Label fx:id="lbl_flightCode" text="Flight Code:" />
        <Label fx:id="lbl_travelDate" text="Date:" />
        <Label fx:id="lbl_travelFrom" text="From:" />
        <Label fx:id="lbl_travelTo" text="To:" />

        <Text text="--- Seat Information ---" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <Label fx:id="lbl_seatClass" text="Seat Class:" />
        <Label fx:id="lbl_seatPref" text="Seat Preference:" />

        <Text text="--- Payment ---" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <Label fx:id="lbl_totalPrice" text="Total Price:" />

        <Text text="--- Issued By ---" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
        <Label fx:id="lbl_issuedBy" text="Issued by:" />
    </VBox>

</VBox>
